<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_ad_credentials" model="mail.template">
            <field name="name">Employee Onboarding: AD Credentials</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Your Active Directory Account - {{ object.company_id.name or 'Odoo' }}</field>
            <field name="use_default_to" eval="False"/>
            <field name="email_to">{{ object.work_email or '' }}</field>
            <field name="description">Sent to employee with AD username and initial password when account is created</field>
            <field name="body_html" type="html">
<div style="font-size: 13px; margin: 0px; padding: 0px;">
    <p>Hello <t t-out="object.name or 'there'"/>.</p>
    <p>Your Active Directory account has been created.</p>
    <p><strong>Username:</strong> <t t-out="object.ad_username or ''"/></p>
    <p><strong>Password:</strong> <t t-out="ctx.get('ad_initial_password', '') or ''"/></p>
    <p>Please change your password after your first login.</p>
    <p>Best regards,</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
